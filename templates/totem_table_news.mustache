{{!
	@template block_totem/totem_table
	
	Show totem as a table
}}
<div data-region="totem-element-news">
	{{#records}}
		<div style="border: 1px solid black; margin-bottom: 5px; padding: 5px; {{eventtypecss}}">
			<b>{{displaydate}}</b><br />
			{{displaytext}}
			<div style="text-align:right">
				{{#editbtn}}<a href="news.php?id={{id}}&blockid={{blockid}}"><i class="icon fa fa-cog fa-fw " title="{{lang_edit_totemelement}}" aria-label="{{lang_edit_totemelement}}"></i></a>{{/editbtn}}
				{{#copybtn}}<a href="news.php?id={{id}}&blockid={{blockid}}&action=copy"><i class="icon fa fa-copy fa-fw " title="{{lang_copy_totemelement}}" aria-label="{{lang_copy_totemelement}}"></i></a>{{/copybtn}}
				{{#showbtn}}<a href="news.php?id={{id}}&blockid={{blockid}}&action={{displayevent}}"><i class="icon fa fa-{{displayevent}} fa-fw " title="{{#displayhidden}}{{lang_show_totemelement}}{{/displayhidden}}{{^displayhidden}}{{lang_hide_totemelement}}{{/displayhidden}}" aria-label="{{lang_show_totemelement}}"></i></a>{{/showbtn}}
				{{#delete}}<a href="#" src="news.php?id={{id}}&blockid={{blockid}}" class="icon-delete"><i class="icon fa fa-trash fa-fw " title="{{lang_delete_totemelement}}" aria-label="{{lang_delete_totemelement}}"></i></a>{{/delete}}
			</div>
		</div>
	{{/records}}
</div>