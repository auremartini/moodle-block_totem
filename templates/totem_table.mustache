{{!
	@template block_totem/totem_table
	
	Show totem as a table
}}
<div data-region="totem-event-{{date}}" class="totem-table">
	{{#showDate}}<h3 id="totem-title-{{date}}">
	{{#collapsible}}
		<a href="javascript:
			 document.getElementById('totem-table-{{date}}').classList.add('hidden');
			 document.getElementById('totem-switchoff-{{date}}').classList.add('hidden');
			 document.getElementById('totem-switchon-{{date}}').classList.remove('hidden');"
		   id="totem-switchoff-{{date}}" class="{{#collapsed}}hidden{{/collapsed}}">&#9662;</a>
		<a href="javascript:
		     document.getElementById('totem-table-{{date}}').classList.remove('hidden');
		     document.getElementById('totem-switchoff-{{date}}').classList.remove('hidden');
		     document.getElementById('totem-switchon-{{date}}').classList.add('hidden');"
		   id="totem-switchon-{{date}}" class="{{^collapsed}}hidden{{/collapsed}}">&#9656;</a>
	{{/collapsible}}
	{{date_text}}
	{{#addbtn}}<a href="event.php?blockid={{blockid}}&date={{date}}"><i class="icon fa fa-calendar-plus-o fa-fw  " title="{{#str}} addtotemevent, block_totem {{/str}}" aria-label="{{#str}} addtotemevent, block_totem {{/str}}"></i></a>{{/addbtn}}
	</h3>{{/showDate}}
	<table id="totem-table-{{date}}" class="generaltable{{#collapsible}}{{#collapsed}} hidden{{/collapsed}}{{/collapsible}}">
		{{#records}}
			<tr>
			<td class="cell c0" width="40rem" style="{{eventtypecss}}">{{eventtype}}</td>
			<td class="cell c1" width="80rem"><span style="{{#displayhidden}}color: #868e96;{{/displayhidden}}">{{teacher}}</span></td>
			<td class="cell c2" width="80rem"><span style="{{#displayhidden}}color: #868e96;{{/displayhidden}}">{{teaching}}{{#teaching}}&nbsp;{{/teaching}}{{subject}}</span></td>
			<td class="cell c3" width="80rem"><span style="{{#displayhidden}}color: #868e96;{{/displayhidden}}">{{section}}</span></td>
			<td class="cell c4" width="160rem"><span style="{{#displayhidden}}color: #868e96;{{/displayhidden}}">{{time}}</span></td>
			<td class="cell c5"><span style="{{#displayhidden}}color: #868e96;{{/displayhidden}}">{{displaytext}}</span></td>
			<td class="cell c6">
				{{#editbtn}}<a href="event.php?id={{id}}&blockid={{blockid}}"><i class="icon fa fa-cog fa-fw " title="{{#str}} edittotemevent, block_totem {{/str}}" aria-label="{{#str}} edittotemevent, block_totem {{/str}}"></i></a>{{/editbtn}}
				{{#copybtn}}<a href="event.php?id={{id}}&blockid={{blockid}}&action=copy"><i class="icon fa fa-copy fa-fw " title="{{#str}} copytotemevent, block_totem {{/str}}" aria-label="{{#str}} copytotemevent, block_totem {{/str}}"></i></a>{{/copybtn}}
				{{#showbtn}}<a href="event.php?id={{id}}&blockid={{blockid}}&action={{displayevent}}"><i class="icon fa fa-{{displayevent}} fa-fw " title="{{#displayhidden}}{{#str}} showtotemevent, block_totem {{/str}}{{/displayhidden}}{{^displayhidden}}{{#str}} hidetotemevent, block_totem {{/str}}{{/displayhidden}}" aria-label="{{#str}} showtotemevent, block_totem {{/str}}"></i></a>{{/showbtn}}
				{{#delete}}<a href="#" src="event.php?id={{id}}&blockid={{blockid}}" class="icon-delete"><i class="icon fa fa-trash fa-fw " title="{{#str}} deletetotemevent, block_totem {{/str}}" aria-label="{{#str}} deletetotemevent, block_totem {{/str}}"></i></a>{{/delete}}
			</td>
			</tr>
		{{/records}}
	</table>	
</div>